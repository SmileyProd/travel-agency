{% extends 'base.html.twig' %}

{% set current_path = app.request.get('_route') %}

{% block metas %}
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="SymfTravel est un site de réservation de voyages dans différents pays. Si un pays, une ville vous fait rêver, SymfTravel est la compagnie de voyage que vous devez contacter." />
    <meta name="keywords" content="" />
    <meta name="author" content="Julien Denize, Nicolas Diebold" />
    <!-- Facebook -->
    <meta property="og:title" content=""/>
    <meta property="og:image" content=""/>
    <meta property="og:url" content=""/>
    <meta property="og:site_name" content=""/>
    <meta property="og:description" content=""/>
    <!-- twitter -->
    <meta name="twitter:title" content="" />
    <meta name="twitter:image" content="" />
    <meta name="twitter:url" content="" />
    <meta name="twitter:card" content="" />
{% endblock %}

{% block stylesheets %}
    <link href="https://fonts.googleapis.com/css?family=Quicksand:300,400,500,700" rel="stylesheet">
	<!-- Animate.css -->
	<link rel="stylesheet" href="/css/front/animate.css">
	<!-- Icomoon Icon Fonts-->
	<link rel="stylesheet" href="/css/front/icomoon.css">
	<!-- Bootstrap  -->
	<link rel="stylesheet" href="/css/front/bootstrap.css">
	<!-- Magnific Popup -->
	<link rel="stylesheet" href="/css/front/magnific-popup.css">
	<!-- Flexslider  -->
	<link rel="stylesheet" href="/css/front/flexslider.css">
	<!-- Owl Carousel -->
	<link rel="stylesheet" href="/css/front/owl.carousel.min.css">
	<link rel="stylesheet" href="/css/front/owl.theme.default.min.css">
	<!-- Date Picker -->
	<link rel="stylesheet" href="/css/front/bootstrap-datepicker.css">
	<!-- Flaticons  -->
	<link rel="stylesheet" href="/fonts/flaticon/font/flaticon.css">
	<!-- Theme style  -->
	<link rel="stylesheet" href="/css/front/style.css">
    <!-- Custom style -->
    <link rel="stylesheet" href="/css/front/custom-style.css">
{% endblock %} {# stylesheets #}

{% block body %}
    <div class="colorlib-loader"></div>
    <div id="page">
        {% block menu %}
            <header>
                <nav class="colorlib-nav" role="navigation">
                    <div class="top-menu">
                        <div class="container-fluid">
                            <div class="row">
                                <div class="col-xs-2">
                                    <div id="colorlib-logo"><a href="{{ path('front_home') }}">SymfTravel</a></div>
                                </div>
                                <div class="col-xs-10 text-right menu-1">
                                    <ul>
                                        <li class="{{ current_path == 'front_home' ? 'active' }}"><a href="{{ path('front_home') }}">Accueil</a></li>
                                        <li class="{{ current_path == 'front_circuits' ? 'active' }}"><a href="{{ path('front_circuits') }}">Nos circuits</a></li>
                                        <li class="{{ current_path == 'front_programs' ? 'active' }}"><a href="{{ path('front_programs') }}">Nos programmes</a></li>
                                        <li class="{{ current_path == 'front_news' ? 'active' }}"><a href="{{ path('front_news') }}">Actualités</a></li>
                                        <li class="{{ current_path == 'front_contact' ? 'active' }}"><a href="{{ path('front_contact') }}">Nous contacter</a></li>
                                        <li class="{{ current_path == 'front_shopping_cart' ? 'active' }}">
                                            <a href="{{ path('front_shopping_cart') }}">
                                                <i class="icon-shopping-cart"></i>
                                            </a>
                                        </li>
                                        <li>
                                            {% if app.user %}
                                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Bonjour {{ app.user.username }}<span class="caret"></span></a>
                                                <ul class="dropdown-menu dropdown-menu-right dropdown-connection">
                                                    {% if is_granted('ROLE_ADMIN') %}
                                                        <li><a href="{{ path('admin_circuit_index') }}">Espace administrateur</a></li>
                                                    {% endif %}
                                                    <li><a href="{{ path('fos_user_security_logout') }}">Se déconnecter</a></li>
                                                </ul>
                                            {% else %}
                                                <a href="{{ path('fos_user_security_login') }}">Se connecter</a>
                                            {% endif %}
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </nav>
            </header>
        {% endblock %} {# menu #}
        <main>
            {% block main %}    
            {% endblock %} {# main #}
        </main>
        {% block footer %}
            <footer id="colorlib-footer" role="contentinfo">
                <div class="container">
                    <div class="row row-pb-md">
                        <div class="col-md-3 colorlib-widget">
                            <h4>SymfTravel</h4>
                            <p>Créée en 2018, notre agence de voyage a su rapidement accentuer ses efforts sur la qualité de relation avec le client, avant d'exploser en quelques mois seulement.</p>
                            <p>
                                <ul class="colorlib-social-icons">
                                    <li><a href="#"><i class="icon-twitter"></i></a></li>
                                    <li><a href="#"><i class="icon-facebook"></i></a></li>
                                    <li><a href="#"><i class="icon-linkedin"></i></a></li>
                                    <li><a href="#"><i class="icon-dribbble"></i></a></li>
                                </ul>
                            </p>
                        </div>
                        <div class="col-md-3 colorlib-widget">
                            <h4>Réservez maintenant</h4>
                            <p>Vous n'êtes toujours pas décidés ? Laissez-vous guider par notre liste de circuits programmés.</p>
                        </div>
                        <div class="col-md-3">
                            <h4>L'Actualité</h4>
                            <ul class="colorlib-footer-links">
                                <li><a href="{{path('front_news')}}#art1">Les villes qui font rêver</a></li>
                                <li><a href="{{path('front_news')}}#art2">Comment trouver rapidement son voyage de rêve</a></li>
                                <li><a href="{{path('front_news')}}#art3">Les voyages avantageux du moment</a></li>
                            </ul>
                        </div>

                        <div class="col-md-3 col-md-push-1">
                            <h4>À propos de nous</h4>
                            <ul class="colorlib-footer-links">
                                <li>14, rue Charles Fourier <br> 91000 ÉVRY</li>
                                <li>+33 6 47 80 12 65</li>
                                <li><a href="mailto:info@symftravel.com">info@symftravel.com</a></li>
                            </ul>
                        </div>
                        <div class="row">
                            <div class="col-md-12 text-center">
                                <p>
                                    <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                                    Copyright &copy;<script>document.write(new Date().getFullYear());</script> All rights reserved | This template is made with <i class="icon-heart2" aria-hidden="true"></i> by <a href="https://colorlib.com" target="_blank">Colorlib</a>
                                    <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. --></span> 
                                    <span class="block">Demo Images: <a href="http://pexels.com/" target="_blank">Pexels.com</a></span>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </footer>
        {% endblock %} {# footer #} 
    </div>
    <div class="gototop js-top">
        <a href="#" class="js-gotop"><i class="icon-arrow-up2"></i></a>
    </div>
{% endblock %} {# body #}

{% block javascripts %}
    <!-- Modernizr JS -->
	<script src="/js/front/modernizr-2.6.2.min.js"></script>
	<!-- jQuery -->
	<script src="/js/front/jquery.min.js"></script>
	<!-- jQuery Easing -->
	<script src="/js/front/jquery.easing.1.3.js"></script>
	<!-- Bootstrap -->
	<script src="/js/front/bootstrap.min.js"></script>
	<!-- Waypoints -->
	<script src="/js/front/jquery.waypoints.min.js"></script>
	<!-- Flexslider -->
	<script src="/js/front/jquery.flexslider-min.js"></script>
	<!-- Owl carousel -->
	<script src="/js/front/owl.carousel.min.js"></script>
	<!-- Magnific Popup -->
	<script src="/js/front/jquery.magnific-popup.min.js"></script>
	<script src="/js/front/magnific-popup-options.js"></script>
	<!-- Date Picker -->
	<script src="/js/front/bootstrap-datepicker.js"></script>
	<!-- Stellar Parallax -->
	<script src="/js/front/jquery.stellar.min.js"></script>
	<!-- Main -->
	<script src="/js/front/main.js"></script>
    <!-- Our scripts -->
    <script src="/js/front/handle_likes.js"></script>
{% endblock %}
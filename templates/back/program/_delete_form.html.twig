<form method="post" action="{{ path('admin_program_delete', {'id': circuit_program.id}) }}" onsubmit="return confirm('Voulez-vous vraiment supprimer cette programmation?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ circuit_program.id) }}">
    <button class="btn btn-danger">Supprimer</button>
</form>

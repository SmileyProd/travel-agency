{% extends '/back/base_back.html.twig' %}

{% block title %}Voir - Programmation{% endblock %}

{% block main %}
    <h1>Programmation n°{{ circuit_program.id }} du <a href="{{ path('admin_circuit_show', {'id': circuit_program.circuit.id})}}">circuit n°{{ circuit_program.circuit }}</a></h1>

    <table class="table">
        <tbody>
            <tr>
                <th scope="row">Date de départ</th>
                <td>{{ circuit_program.departureDate ? circuit_program.departureDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th scope="row">Nombre de personnes</th>
                <td>{{ circuit_program.nbPeople }}</td>
            </tr>
            <tr>
                <th scope="row">Prix</th>
                <td>{{ circuit_program.price }}€</td>
            </tr>
        </tbody>
    </table>

    <a role="button" class="btn btn-secondary" href="{{ path('admin_program_edit', {'id': circuit_program.id}) }}">Editer</a>
    <a role="button" class="btn btn-info" href="{{ path('admin_program_index') }}">Revenir à la liste</a>

    {{ include('/back/program/_delete_form.html.twig') }}
{% endblock %}

{% extends '/back/base_back.html.twig' %}

{% block title %}Nouvelle - Programmation{% endblock %}

{% block main %}
    <h1>Créer une nouvelle programmation</h1>

    {{ include('/back/program/_form.html.twig') }}

    <a role="button" class="btn btn-info" href="{{ path('admin_program_index') }}">Revenir à la liste</a>

    <h2>Programmations actuelles du circuit {{circuit_program.circuit.id}}</h2>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Date de départ</th>
                <th scope="col">Nombre de Personnes</th>
                <th scope="col">Prix</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for program in circuit_program.circuit.programs %}
            <tr>
                <td>{{ program.departureDate|date("m/d/Y") }}</td>
                <td>{{ program.nbPeople }}</td>
                <td>{{ program.price }}€</td>
                <td><a role="button" class="btn btn-secondary" href="{{ path('admin_program_edit', {'id': program.id}) }}">Editer</a></td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">Aucune programmation n'a été trouvée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

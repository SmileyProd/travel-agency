{% extends 'back/base_back.html.twig' %}

{% block title %}Voir - Utilisateur{% endblock %}

{% block main %}
    <h1>Utilisateur {{ user.username }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Nom d'utilisateur</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
                <th>Dernière connexion</th>
                <td>{{ user.lastLogin ? user.lastLogin|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|join(', ') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a role="button" class="btn btn-info" href="{{ path('admin_user_index') }}">Retour à la liste</a>

    {{ include('/back/user/_delete_form.html.twig') }}
{% endblock %}
